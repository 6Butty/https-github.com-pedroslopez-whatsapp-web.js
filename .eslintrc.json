{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": ["eslint:recommended", "plugin:mocha/recommended"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2020
    },
    "plugins": ["mocha"],
    "ignorePatterns": ["docs"],
    "rules": {
        "linebreak-style": ["error", "unix"],
        "semi": ["error", "always"]
    }
}
